# list of plugin's clean targets
#
CaeUnsPrint3D_install: install_validate CaeUnsPrint3D_installnow
	@echo "CaeUnsPrint3D Installed to '$(PLUGIN_INSTALL_FULLPATH)'"

CaeUnsPrint3D_installnow:
	-@$(CP) $(CaeUnsPrint3D_FULLLIB) "$(PLUGIN_INSTALL_FULLPATH)/libCaeUnsPrint3D.$(SHLIB_SUFFIX)"

CaeUnsPrint3D_uninstall:
	@echo "CaeUnsPrint3D Uninstalled from '$(PLUGIN_INSTALL_FULLPATH)'"
	-@$(RMF) "$(PLUGIN_INSTALL_FULLPATH)/libCaeUnsPrint3D.$(SHLIB_SUFFIX)"
