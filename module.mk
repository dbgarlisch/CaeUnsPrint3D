	$(CXX) $(CaeUnsPrint3D_CXXFLAGS) $(ARCH_FLAGS) -o $@ -c $<

$(CaeUnsPrint3D_OBJ_LOC)/%.o: $(PLUGINS_RT_PWGMLOC)/%.cxx
	@echo "***"
	@echo "*** $*"
	@echo "***"
	@mkdir -p $(CaeUnsPrint3D_OBJ_LOC)
	$(CXX) $(CaeUnsPrint3D_CXXFLAGS) $(ARCH_FLAGS) -o $@ -c $<

$(CaeUnsPrint3D_OBJ_LOC)/%.o: $(PLUGINS_RT_CAEPLOC)/%.cxx
	@echo "***"
