########################################################################
# list of plugin's clean targets
#
CaeUnsPrint3D_cleandep:
	-$(RMR) $(CaeUnsPrint3D_OBJ_LOC)/*.d

CaeUnsPrint3D_clean:
	-$(RMR) $(CaeUnsPrint3D_OBJ_LOC)/*.{d,o}

CaeUnsPrint3D_distclean: CaeUnsPrint3D_clean
	-$(RMF) $(CaeUnsPrint3D_FULLLIB) > /dev/null 2>&1

